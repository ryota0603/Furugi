<div class="container mt-5">
  <div class="table-responsive">
   <% if @customers.exists? %>
    <% @customers.each do |customer| %>
      <table class="table table-striped table-dark text-white table-hover">
        <thead>
          <tr>
           <th colspan="2">user</th>
           <th>follow</th>
           <th>follower</th>
           <th>status</th>
          </tr>
        </thead>
        <tbody>
          <tr>
           <td colspan="2">
             <div class="d-flex align-items-center">
               <%= image_tag customer.get_profile_image,class: "rounded-circle", size:'50x50' %>
               <span class="ml-2"><%= customer.name %></span>
             </div>  
            </td>
            <td>
              <%= customer.followings.count %>
            </td>
            <td>
              <%= customer.followers.count %>
            </td>
            <% if customer.is_deleted == false %>
             <td class='text-success'>有効</td>
            <% else %>
             <td class='text-secoundary'>退会</td>
            <% end %>
          </tr>
        </tbody>
      </table>
     <% end %>
    <% else %>
     <p>ユーザーはいません</p>
    <% end %>
  </div>
</div>