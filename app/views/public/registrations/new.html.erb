<div class="container">
  <mark class="h5 bg-light">新規会員登録</mark>
  
  <div class="ml-5">
  <%= form_with model: @customer,  url: customer_registration_path do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
      <div class="row">
        <label class="col-lg-3">ユーザー名</label>
        <div class="col-lg-3">
          <span class="mr-3">name</span>
          <%= f.text_field :name, placeholder:"古着屋太郎" %>
        </div>
      </div><br>
      
      
      <div class="row">
        <label class="col-lg-3">メールアドレス</label>
        <div class="col-lg-3">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"example@mail", class: 'ml-5' %>
        </div>
      </div><br>

      <div class="row">
        <label class="col-lg-3">パスワード(6文字以上)</label>
        <div class="col-lg-3">
          <%= f.password_field :password, autocomplete: "new-password", class: 'ml-5' %>
        </div>
      </div><br>

      <div class="row">
        <label class="col-lg-3">パスワード(確認用)</label>
        <div class="col-lg-3">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'ml-5' %>
        </div>
      </div><br>

      <div class="row actions ml-5">
        <div class="col-md-8 offset-md-3">
          <%= f.submit "新規登録", class: "btn btn-success col-lg-2" %>
        </div>
      </div>
    <% end %>
  </div>
    
  <mark class="h5 bg-light ml-5">既に登録済みの方</mark>
    <div class="col-lg-12 mt-3 ml-5">
      <%= link_to "こちら", new_customer_session_path %>
      からログインしてください。
    </div>
    <div class="row">
      <%= link_to 'ゲストログイン（閲覧用）', customers_guest_sign_in_path, class: "btn btn-secondary btn-sm btn-block mb-3 sign_in", method: :post %>
    </div>
</div>
