<div class="container my-5">
  <div class="row">
    <div class="offset-2">
      <mark class="h4 bg-light ml-5">会員情報編集</mark>
    </div>
  </div>

  <div class="offset-2 row mt-4 ml4">
    <div class="col-xs-12 ml-3">
      <%= form_with model: @customer, url: customer_path do |f| %>
      
        <table class="table table-borderless">
          <tbody>
            <tr>
              <td style="width: 30%"><%= f.label :image, "image" %></td>
              <td><%= f.file_field :profile_image, class: "form-control-file customer_image", accept: 'image/*' %></td>
            </tr>
            <tr>
              <td style="width: 30%"><%= f.label :name, "name" %></td>
              <td><%= f.text_field :name, class: "form-control name"%></td>
            </tr>
            <tr>
              <td style="width: 30%"><%= f.label :introduction, "introduction" %></td>
              <td><%= f.text_field :introduction, class: "form-control introduction"%></td>
            </tr>
            <tr>
              <td style="width: 30%"><%= f.label :email, "メールアドレス" %></td>
              <td><%= f.email_field :email, class: "form-control email"%></td>
            </tr>
          </tbody>
        </table>

        <div class="col-xs-10 mt-3">
          <p>
            <%= f.submit "編集内容を保存", class: "btn btn-success btn-sm w-25", style: "margin: 10px;" %>
            <%= link_to "退会する" , customers_unsubscribe_path(@customer), class: "btn btn-danger btn-sm ml-5", style: "margin: 10px;" %>
          </p>
        </div>
      <% end %>
    </div>
  </div>
