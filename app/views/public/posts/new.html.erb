<div class="container">
  <div class="row "><h4 class="col-md-2 col-sm-2 bg-light ">新規投稿</h4></div>
    <div class="row ">
      <div class="col-12">
        <%= form_with model: @post, local: true do |f| %>
          <div class="form-group  row mt-5 mb-4" >
            <%= f.label :画像 ,class:"col-md-2 text-center" %>
            <%= f.file_field :image, accept:"image/*" %> <!--accept: "image/*"は画像ファイルのみ投稿可能-->
          </div>
            <div class="form-group row mt-3 " >
              <%= f.label :名前 ,class:"col-md-2 text-center"  %>
              <%= f.text_field :name ,class:"form-control col-md-5" %>
            </div>
            <div class="form-group row mt-3 ">
              <%= f.label :店舗名 ,class:"col-md-2 text-center"  %>
              <%= f.text_field :shopname ,class:"form-control col-md-5"  %>
            </div>
            
            <div class="form-group row mt-3">
              <%= f.label :説明 ,class:"col-md-2 text-center"  %>
              <%= f.text_area :body ,class:"form-control col-md-5" %>
            </div>
            
            <div class="form-group text-center col-7">
              <%= f.submit "新規登録" ,class:"btn btn-success btn-lg "  %>
            </div>
        <% end %>
      </div>
    </div>
      
</div>