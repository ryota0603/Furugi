<div class="container mt-5">
  <div class="table-responsive">
   <% if @customers.exists? %>
    <% @customers.each do |customer| %>
      <table class="table table-striped table-dark text-white table-hover">
        <thead>
          <tr>
           <th class="text-center"><input type="checkbox"></th>
           <th colspan="2">user</th>
           <th>follow</th>
           <th>follower</th>
          </tr>
        </thead>
        <tbody>
          <tr>
           <td class="text-center"><input type="checkbox"></td>
           <td colspan="2">
             <div class="d-flex align-items-center">
               <%= image_tag customer.get_profile_image,class: "rounded-circle", size:'50x50' %>
               <span class="ml-2"><%= customer.name %></span>
             </div>  
            </td>
            <td>
              <%= customer.followings.count %>
            </td>
            <td>
              <%= customer.followers.count %>
            </td>
          </tr>
        </tbody>
      </table>
     <% end %>
    <% else %>
     <p>ユーザーはいません</p>
    <% end %>
  </div>
</div>